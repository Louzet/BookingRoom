{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <!--colleft-->
        <div class="col-md-1">

        </div>

        <div class="col-md-4">

            {# pass an array argument to get the messages of those types  #}
            {% for label, messages in app.flashes(['success','notice','info','warning', 'error']) %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <!--post-detail-->
            <div class="post-detail">
                <h1>BookingRoom : INFOS</h1>

            </div>
        </div>
    </div>
{% endblock %}