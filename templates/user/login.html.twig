{% extends 'template.html.twig' %}

{% block content %}
    <div class="mt-5">
        <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="form-view">
                <h2>Connectez vous</h2>
                {{ error }}
                {{ form_start(form) }}
                    <div class="form-group my-3">
                        {{ form_label(form._username) }}
                        {{ form_errors(form._username) }}
                        {{ form_widget(form._username) }}
                        {{ form_help(form._username) }}
                    </div>
                    <div class="form-group my-3">
                        {{ form_label(form._password) }}
                        {{ form_errors(form._password) }}
                        {{ form_widget(form._password) }}
                        {{ form_help(form._password) }}
                    </div>
                    <div class="form-group my-2">
                        <button class="btn btn-success default-color lighten-1">Connexion</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </div>
{% endblock %}
